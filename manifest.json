{
  "manifest_version": 3,
  "name": "ListFilter",
  "version": "0.0.3",
  "description": "This extension can apply a filter to a select list.",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/bg/background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_icon": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options_custom/index.html",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ],
      "js": [
        "src/inject/inject.js","js/jquery-3.6.0.min.js","js/select2.full.min.js","src/components.js"
      ],
      "css":["css/select2.min.css"]
    }
  ]
}