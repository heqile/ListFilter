{
  "name": "ListFilter",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension can apply a filter to a list. To activate : Click Icon or use shortcut Ctrl + Click.",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options_custom/index.html",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ],
      "js": [
        "src/inject/inject.js","js/jquery.min.js","js/select2.full.min.js","src/components.js"
      ],
      "css":["css/select2.min.css"]
    }
  ]
}